# =========================
# 固件目标架构 / 内核版本
# =========================
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_Generic=y
CONFIG_LINUX_6_6=y
# CONFIG_LINUX_5_15 is not set

# =========================
# 科学上网插件
# =========================
CONFIG_PACKAGE_luci-app-ssr-plus=y
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_luci-app-passwall2=y

# =========================
# VPN / 内网穿透
# =========================
CONFIG_PACKAGE_luci-app-wireguard=y
CONFIG_PACKAGE_luci-app-zerotier=y
CONFIG_PACKAGE_zerotier=y
CONFIG_PACKAGE_luci-app-ddnsto=y
CONFIG_PACKAGE_ddnsto=y
CONFIG_PACKAGE_luci-app-uugameacc=y
CONFIG_PACKAGE_uugameacc=y

# =========================
# 文件共享 / 存储支持
# =========================
CONFIG_PACKAGE_luci-app-samba4=y
CONFIG_PACKAGE_luci-app-ftp=y
CONFIG_PACKAGE_luci-app-nfs=y
CONFIG_PACKAGE_luci-app-mount=y
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-extras=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
CONFIG_PACKAGE_kmod-fs-btrfs=y

# =========================
# 系统监控 / 下载工具
# =========================
CONFIG_PACKAGE_luci-app-statistics=y
CONFIG_PACKAGE_luci-app-netdata=y
CONFIG_PACKAGE_luci-app-aria2=y

# =========================
# Docker / 容器管理
# =========================
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_luci-app-dockerman=y

# =========================
# DNS / 网络加速
# =========================
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_adguardhome=y
CONFIG_PACKAGE_smartdns=y
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_luci-i18n-smartdns-zh-cn=y

# =========================
# Web 服务 / 管理界面
# =========================
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y
CONFIG_PACKAGE_uhttpd-mod-lua=y
CONFIG_PACKAGE_uhttpd-mod-ssl=y
CONFIG_PACKAGE_uhttpd-mod-redirect=y
CONFIG_PACKAGE_luci-theme-argon=y

# =========================
# 第三方插件
# =========================
CONFIG_PACKAGE_luci-app-cloudflarespeedtest=y
CONFIG_PACKAGE_CloudflareSpeedTest=y
CONFIG_PACKAGE_luci-app-unblockneteasemusic=y
CONFIG_PACKAGE_UnblockNeteaseMusic=y
CONFIG_PACKAGE_luci-app-gost=y
CONFIG_PACKAGE_gost=y
CONFIG_PACKAGE_luci-app-alist=y
CONFIG_PACKAGE_alist=y
CONFIG_PACKAGE_luci-app-clouddrive2=y
CONFIG_PACKAGE_clouddrive2=y
CONFIG_PACKAGE_luci-app-nikki=y
CONFIG_PACKAGE_nikki=y

# =========================
# 安全 / 远程访问
# =========================
CONFIG_PACKAGE_dropbear=y
# CONFIG_PACKAGE_openssh-server is not set
# CONFIG_PACKAGE_openssh-client is not set

# =========================
# IPv6 / 防火墙 / DDNS
# =========================
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-ddns=y

# =========================
# 中文语言包
# =========================
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ddns-zh-cn=y
CONFIG_PACKAGE_luci-i18n-docker-zh-cn=y
CONFIG_PACKAGE_luci-i18n-samba4-zh-cn=y
CONFIG_PACKAGE_luci-i18n-wireguard-zh-cn=y
CONFIG_PACKAGE_luci-i18n-openclash-zh-cn=y
CONFIG_PACKAGE_luci-i18n-passwall2-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ssr-plus-zh-cn=y
CONFIG_PACKAGE_luci-i18n-adguardhome-zh-cn=y
CONFIG_PACKAGE_luci-i18n-statistics-zh-cn=y
CONFIG_PACKAGE_luci-i18n-netdata-zh-cn=y
CONFIG_PACKAGE_luci-i18n-aria2-zh-cn=y
CONFIG_PACKAGE_luci-i18n-nfs-zh-cn=y
CONFIG_PACKAGE_luci-i18n-zerotier-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ddnsto-zh-cn=y
CONFIG_PACKAGE_luci-i18n-uugameacc-zh-cn=y
CONFIG_PACKAGE_luci-i18n-alist-zh-cn=y
CONFIG_PACKAGE_luci-i18n-clouddrive2-zh-cn=y
CONFIG_PACKAGE_luci-i18n-nikki-zh-cn=y
CONFIG_PACKAGE_luci-i18n-gost-zh-cn=y
CONFIG_PACKAGE_luci-i18n-unblockneteasemusic-zh-cn=y

# =========================
# 依赖包
# =========================
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_yq=y
CONFIG_PACKAGE_kmod-inet-diag=y
CONFIG_PACKAGE_kmod-nft-socket=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_kmod-tun=y

# =========================
# 可自定义参数（用户可调）
# =========================
# LuCI 默认语言和主题
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_PACKAGE_luci-theme-argon=y

# 默认网络配置
CONFIG_DEFAULT_IP="192.168.1.1"
CONFIG_DEFAULT_GATEWAY="192.168.1.1"
CONFIG_DEFAULT_DNS="114.114.114.114"

# 包管理策略
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_opkg-keys=y

# 日志与调试选项
CONFIG_KERNEL_PRINTK=y
CONFIG_KERNEL_DEBUG_FS=y
CONFIG_PACKAGE_logd=y

# 镜像压缩方式
CONFIG_TARGET_IMAGES_GZIP=y
# CONFIG_TARGET_IMAGES_XZ is not set
